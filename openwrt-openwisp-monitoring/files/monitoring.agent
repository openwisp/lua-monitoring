#!/bin/sh

while [ -n "$1" ]; do
	case "$1" in
		--version|-v) export VERSION=1; break;;
		--url) export BASE_URL="$2"; shift;;
		--uuid) export UUID="$2"; shift;;
		--key) export KEY="$2"; shift;;
		--verify_ssl) export verify_ssl="$2"; shift;;
		--interval) export INTERVAL="$2"; shift;;
		--monitored_interfaces) export MONITORED_INTERFACES=$2; shift;;
		--required_memory) export required_percent=$2; shift;;
		-*)
			echo "Invalid option: $1"
			exit 1
		;;
		*) break;
	esac
	shift;
done

if [ "$VERSION" -eq "1" ]; then
	VERSION=$(cat /etc/openwisp/monitoring/VERSION)
	echo "openwisp-monitoring $VERSION"
	exit 0
fi

CURL_COMMAND='curl'
if [ "$verify_ssl" == 0 ]; then
	CURL_COMMAND="$CURL_COMMAND -k"
fi

URL="$BASE_URL/api/v1/monitoring/device/$UUID/?key=$KEY"

tmp_dir="/tmp/openwisp/monitoring"

check_available_memory(){
	total=$(ubus call system info | grep -m1 total | tr -cd 0-9)
	available=$(ubus call system info | grep available | tr -cd 0-9)
	required=$(echo - |awk -v percent=$required_percent -v total=$total '{printf percent*total}')

	if [ "$available" -ge "$required" ]; then
		echo "1"
	else
		logger -s "Not enough memory available" \
		       -t monitoring \
		       -p daemon.err

		echo "0"
	fi

}

collect_data(){
	n=0
	logger -s "Collecting NetJSoN Monitoring data" \
	       -t monitoring \
	       -p daemon.info

	until [ "$n" -ge 5 ]
	do
		echo "$(/usr/sbin/netjson_monitoring "$MONITORED_INTERFACES")" && break
		
		if [ "$n" -eq 5 ]; then
			logger -s "Collecting data failed! Retrying" \
			       -t monitoring \
			       -p daemon.err
		fi
		n=$((n+1))
		sleep 5
	done
}

save_data() {
	file_name="$(date +'%d-%m-%Y_%H:%M:%S').json"
	# make directory
	mkdir -p $tmp_dir
	#save data with file_name
	echo "$data" > "$tmp_dir/$file_name)"
	logger -s "Data saved temporarily" \
	       -t monitoring \
	       -p daemon.info
}

while true
do
	data="$(collect_data)"
	#send data
	$($CURL_COMMAND -H "Content-Type: application/json" \
					-X POST \
					-d "$data" \
					-v "$URL")
	exit_code=$?
	if [ "$exit_code" == "0" ]; then
		logger -s "Data sent successfully." \
		       -t monitoring \
		       -p daemon.info
	else
		logger -s "Data not sent successfully. Exit code is $exit_code" \
		       -t monitoring \
		       -p daemon.err

		memory_available="$(check_available_memory)"
		[ "$memory_available" != "0" ] && save_data
	fi

	sleep "$INTERVAL" & wait $!
done
